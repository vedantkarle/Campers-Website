<% layout('/layouts/boilerPlate') %>
<div id="map" style="width: 100%; height: 500px"></div>
<h1 style="text-align: center">All Campgrounds</h1>
<ul style="display: flex; flex-direction: column; align-items: center">
  <% for(let campground of campgrounds){ %>
  <div class="card mb-3" style="width: 70%">
    <div class="row">
      <div class="col-md-4">
        <img src="<%= campground.images[0].url %>" alt="..." width="230px" />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <a href="/campgrounds/<%= campground._id %>"
            ><h5 class="card-title"><%= campground.title %></h5></a
          >
          <p class="card-text"><%= campground.description %></p>
          <p class="card-text">
            <small class="text-muted">Last updated 3 mins ago</small>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</ul>
<script>
  const campgrounds = {features:<%-JSON.stringify(campgrounds)%>};
</script>
<script src="/js/indexMapbox.js"></script>
